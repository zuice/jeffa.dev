---
import { BuildingIcon, GithubIcon } from "lucide-react";

import { Button, buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import { ModeToggle } from "@/components/ModeToggle";
import Paragraph from "@/components/Paragraph.astro";
---

<div class="w-full flex flex-col items-start justify-center gap-4">
  <Paragraph class="text-xl">
    I am a full stack developer based in Southern California. Feel free to
    reach out; I would love to hear about your project!
  </Paragraph>
  <div class="w-full flex items-start gap-4">
    <Button className="flex gap-2"><BuildingIcon /> Let's get to work</Button>
    <a class={cn(buttonVariants({ variant: "secondary" }), "flex gap-2")} href="https://github.com/zuice" target="_blank" rel="noopener noreferrer">
      <GithubIcon /> GitHub
    </a>
    <ModeToggle client:load />
  </div>
</div>
