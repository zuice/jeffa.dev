---
import Paragraph from "@/components/Paragraph.astro";

interface Props {
  subText?: string;
}

const { subText } = Astro.props satisfies Props;
---

<h5 class="flex gap-2 items-center text-xl font-semibold mt-2">
  <slot />
  {subText && (
    <Paragraph class="text-sm">
      {subText}
    </Paragraph>
  )}
</h5>
